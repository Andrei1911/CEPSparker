<?xml version="1.0" encoding="UTF-8"?>
<!-- 
Version seems to be 5.0 for CEP 6.0. Not sure about CEP 6.1. See
https://github.com/Adobe-CEP/CEP-Resources/blob/master/CEP_8.x/ExtensionManifest_v_6_0.xsd
-->
<ExtensionManifest 
	Version="5.0" 
	ExtensionBundleId="$$EXTENSION_BUNDLEID$$" 
	ExtensionBundleVersion="1.0.0"
	ExtensionBundleName="$$EXTENSION_BUNDLENAME$$" 
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance">
	<ExtensionList>
		<Extension Id="$$EXTENSION_ID$$" Version="$$EXTENSION_VERSION$$" />
	</ExtensionList>
	<ExecutionEnvironment>
		<HostList>
$if "$$TARGETAPP$$" == "IDSN"
			<Host Name="$$TARGETAPP$$" Version="[11,99)" />
$endif			
		</HostList>
		<LocaleList>
			<Locale Code="All" />
		</LocaleList>
		<RequiredRuntimeList>		
			<!-- 
			Docs say this needs to be 5.0 for CEP 6.0. Not sure about CEP 6.1. See
			https://github.com/Adobe-CEP/CEP-Resources/blob/master/CEP_6.x/CEP_6.1_HTML_Extension_Cookbook.pdf
			https://github.com/Adobe-CEP/CEP-Resources/blob/master/CEP_8.x/ExtensionManifest_v_6_0.xsd
			-->
			<RequiredRuntime Name="CSXS" Version="5.0" />
		</RequiredRuntimeList>
	</ExecutionEnvironment>
	<DispatchInfoList>
		<Extension Id="$$EXTENSION_ID$$">
			<DispatchInfo>
				<Resources>
					<MainPath>./html/index.html</MainPath>
					<ScriptPath>./jsx/hostscript.jsx</ScriptPath>		
					<CEFCommandLine>
						<Parameter>--allow-file-access</Parameter>
						<Parameter>--allow-file-access-from-files</Parameter>
						<Parameter>--enable-nodejs</Parameter>
						<Parameter>--mixed-context</Parameter>
					</CEFCommandLine>
				</Resources>
				<Lifecycle>
					<AutoVisible>true</AutoVisible>
				</Lifecycle>
				<UI>
					<Type>ModalDialog</Type>
					<Menu>$$EXTENSION_MENUNAME$$</Menu>
					<Geometry>
						<Size>
							<Height>$$PANELHEIGHT$$</Height>
							<Width>$$PANELWIDTH$$</Width>
						</Size>
						<MinSize>
							<Height>$$PANELHEIGHT$$</Height>
							<Width>$$PANELWIDTH$$</Width>
						</MinSize>
						<MaxSize>
							<Height>$$PANELHEIGHT$$</Height>
							<Width>$$PANELWIDTH$$</Width>
						</MaxSize>
					</Geometry>
				</UI>
			</DispatchInfo>
		</Extension>
	</DispatchInfoList>
</ExtensionManifest>
